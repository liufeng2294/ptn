package com.nms.model.equipment.port;

import java.sql.Connection;
import java.util.List;

import com.nms.db.bean.equipment.port.V35PortInfo;
import com.nms.db.dao.equipment.port.V35PortDao;
import com.nms.model.util.ObjectService;
import com.nms.ui.manager.ExceptionManage;

public class V35PortService extends ObjectService {

	public void setConnection(Connection connection) {
		super.connection = connection;
	}

	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}
	private V35PortDao v35PortDao = new V35PortDao();
	
	
	/**
	 * 新建修改
	 * @param v35PortInfo
	 * @return
	 * @throws Exception
	 */
	public int saveOrUpdate(V35PortInfo v35PortInfo) throws Exception {

		if(v35PortInfo == null ) {
			throw new Exception("v35PortInfo is null");
		}
		int result = 0;
		try {
			
			
			if(v35PortInfo.getId() > 0) {
				v35PortDao.update(v35PortInfo, connection);
			
			} else {
				result = v35PortDao.insert(v35PortInfo, connection);
			}
			
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}finally{

		}
		return result;
	}
	
	/**
	 * 
	 * @param v35PortInfo
	 * @return
	 * @throws Exception
	 */
	public List<V35PortInfo> selectByCondition(V35PortInfo v35PortInfo) throws Exception {
		List<V35PortInfo> v35PortInfos = null;		
		try {
			v35PortInfos = v35PortDao.queryByCondition(v35PortInfo, connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		return v35PortInfos;
	}
	
	/**
	 * 根据网元id删除
	 * @param siteId
	 */
	public void deleteBySite(int siteId){
		try {
			v35PortDao.deleteBySite(siteId, connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
	}
}
