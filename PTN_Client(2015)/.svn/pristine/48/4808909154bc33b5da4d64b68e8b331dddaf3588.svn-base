package com.nms.model.ptn.qos;

import java.sql.Connection;
import java.util.List;

import com.nms.db.bean.ptn.qos.MappingRelation;
import com.nms.db.dao.ptn.qos.MappingRelationDao;
import com.nms.model.util.ObjectService;

public class MappingRelationService extends ObjectService{
	
	public void setConnection(Connection connection) {
		super.connection = connection;
	}

	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}
	
	private MappingRelationDao mappingRelationDao = new MappingRelationDao();
	
	/**
	 * 更新或新增QosMappingMode
	 * @param qosMappingModeList
	 * @return
	 * @throws Exception
	 */
	public int saveOrUpdate(MappingRelation mappingRelation) throws Exception{
		int result = 0;
		if(mappingRelation.getId()>0){
			result = mappingRelationDao.update(mappingRelation, connection);
		}else{
			result = mappingRelationDao.insert(mappingRelation, connection);
		}
		return result;
	}
	
	/**
	 * 根据id批量删除
	 * @param idList
	 * @return
	 * @throws Exception
	 */
	public int delete(int id) throws Exception{
		return mappingRelationDao.delete(id, connection);
		
	}
	
	
	/**
	 * 条件查询qos模板
	 * @param qosMappingMode
	 * @return
	 * @throws Exception
	 */
	public List<MappingRelation> queryByCondition(MappingRelation mappingRelation) throws Exception{
		return mappingRelationDao.queryByCondition(mappingRelation, connection);
	}
}
