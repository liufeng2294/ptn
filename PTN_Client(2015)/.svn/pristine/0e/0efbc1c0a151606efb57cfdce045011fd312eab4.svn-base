package com.nms.model.ptn;

import java.sql.Connection;
import java.util.List;

import com.nms.db.bean.equipment.port.PortDiscardInfo;
import com.nms.db.dao.ptn.PortDiscardDao;
import com.nms.model.util.ObjectService;
import com.nms.ui.manager.ExceptionManage;


public class PortDiscardService extends ObjectService{
	
	public void setConnection(Connection connection) {
		super.connection = connection;
	}

	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}
	
	private PortDiscardDao portDiscardDao = new PortDiscardDao();
	
	/**
	 * 新增
	 * @param ethServiceInfo
	 * @throws Exception
	 */
	public int save(PortDiscardInfo portDiscardInfo) throws Exception{
		
		if(portDiscardInfo == null){
			throw new Exception("portDiscardInfo is null");
		}
		int result = 0;
		try {
			result = portDiscardDao.insert(portDiscardInfo, connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}finally{
		}
		return result;
	}
	
	/**
	 * 查询该网元下所有信息
	 * @param siteId
	 * @return
	 * @throws Exception
	 */
	public List<PortDiscardInfo> select(int siteId) throws Exception{
		List<PortDiscardInfo> portDiscardInfos = null;
		if(siteId == 0){
			throw new Exception("siteId is null");
		}   
		try {
			portDiscardInfos = portDiscardDao.queryByCondition(siteId, connection);
			
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}finally{
		}
		return portDiscardInfos;
	}
	
	/**
	 * 更新
	 * @param ethServiceInfo
	 * @throws Exception
	 */
	public void update(PortDiscardInfo portDiscardInfo) throws Exception{
		if(portDiscardInfo == null){
			throw new Exception("portDiscardInfo is null");
		}
		try {
			portDiscardDao.update(portDiscardInfo, connection);
			
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}finally{
		}
	}
	
	/**
	 *删除
	 * @param ethServiceInfo
	 * @throws Exception
	 */
	public void delete(PortDiscardInfo portDiscardInfo) throws Exception{
		if(portDiscardInfo == null){
			throw new Exception("portDiscardInfo is null");
		}
		try {
			portDiscardDao.delete(portDiscardInfo, connection);
			
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}finally{
		}
	}
}
