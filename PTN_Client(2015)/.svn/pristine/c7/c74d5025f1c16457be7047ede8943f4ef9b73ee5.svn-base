package com.nms.model.system;

import java.sql.Connection;
import java.util.ArrayList;
import java.util.List;

import com.nms.db.bean.equipment.shelf.SiteInst;
import com.nms.db.bean.system.Field;
import com.nms.db.bean.system.user.UserField;
import com.nms.db.dao.equipment.shelf.SiteInstDao;
import com.nms.db.dao.system.SubnetDao;
import com.nms.db.dao.system.user.UserFieldDao;
import com.nms.model.util.ObjectService;
import com.nms.ui.manager.ConstantUtil;
import com.nms.ui.manager.ExceptionManage;
/**
 * 子网管理相关功能
 * @author dzy
 *
 */
public class SubnetService extends ObjectService{
	
	SubnetDao subnetDao = new SubnetDao();
	/**
	 *  初始化和刷新数据
	 * @param field 域
	 * @return
	 */
	public List<Field> searchAndrefreshdata(Field field){
		List<Field> list = null;
		List<UserField> userFieldList=null;
		UserFieldDao userFieldDao=null;
		List<Integer> fiedIdList=new ArrayList<Integer>();
		List<Field> fieldsList=null;
		try {
			fieldsList=new ArrayList<Field>();
			list = this.subnetDao.queryByCondition(field, connection);
			if(list!=null&&list.size()>0){
				if(0==ConstantUtil.user.getIsAll()){
					//不可查看所有域
					userFieldDao=new UserFieldDao();
					//查询   用户权限 内 可以 查看的域（用户-域的关联表）
					userFieldList=userFieldDao.queryByUserField(ConstantUtil.user, connection);
					for(UserField userField:userFieldList){
						//遍历，将域的 ID  加入 List
						fiedIdList.add(userField.getField_id());
					}
					for(Field fields:list){
						// 是否包含
						if(fiedIdList.contains(fields.getId())){
							
							fieldsList.add(fields);
						}
					}
				}else{
					// 用户已经选中查看所有域
					fieldsList.addAll(list);
				}
			
			}
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		return list;
		
	}
	/**
	 *  下拉列表
	 * @return
	 */
	public List<Field> comboboxList() {
		List<Field> list = null;
		List<UserField> userFieldList=null;
		UserFieldDao userFieldDao=null;
		List<Integer> fiedIdList=new ArrayList<Integer>();
		List<Field> fieldsList=null;
		try {
			fieldsList=new ArrayList<Field>();
			list = this.subnetDao.comboboxList( connection);
			if(list!=null&&list.size()>0){
				/**
				 * 判断 用户 是否有 查看所有域权限
				 */
				if(0==ConstantUtil.user.getIsAll()){
					userFieldDao=new UserFieldDao();
					//查询   用户权限 内 可以 查看的域（用户-域的关联表）
					userFieldList=userFieldDao.queryByUserField(ConstantUtil.user, connection);
					for(UserField userField:userFieldList){
						//遍历，将域的 ID  加入 List
						fiedIdList.add(userField.getField_id());
					}
					for(Field fields:list){
						// 是否包含
						if(fiedIdList.contains(fields.getId())){
							
							fieldsList.add(fields);
						}
					}
				}else{
					fieldsList.addAll(list);
				}
				
			}
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		return fieldsList;
	}
	/**
	 * 新建 、修改域
	 * @param field 域
	 * @throws Exception
	 */
	public void saveOrUpdate(Field field) throws Exception {
		if (field == null) {
			throw new Exception("field is null");
		}
		this.subnetDao.saveOrUpdate(field ,connection);
	}
	/**
	 * 
	 * @param afterName 修改前名称
	 * @param beforeName 修改后名称
	 * @param siteId  网元ID
	 * @return
	 */
	public boolean nameRepetition(String afterName, String beforeName, int siteId) {
		int result = 0;
		try {
			result = this.subnetDao.query_name(afterName, beforeName, siteId,connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		if(0== result){
			return false;
		}else{
			return true;
		}
	}
	/**
	 * 判断是否有子网元
	 * @param field  域
	 * @return
	 */
	public boolean isSingle(Field field) {
		int result = 0;
		try {
			result = this.subnetDao.isSingle(field,connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		if(0== result){
			return false;
		}else{
			return true;
		}
	}
	/**
	 * 删除域
	 * @param field 域
	 * @return
	 */
	public boolean delete(Field field) {
		int result = 0;
		try {
			result=this.subnetDao.delete(field,connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		if(0== result){
			return false;
		}else{
			return true;
		}
		
	}
	/**
	 * 域下的子网
	 * @param id 域ID
	 * @return
	 */
	public List<Field> subnetCombo(String id) {
		List<Field> list = null;
		list = this.subnetDao.subnetCombo(id,connection);
		return list;
	}
	/**
	 *  查询子网 和 所属网元
	 * @param searchField  查询的子网
	 * @param connection
	 * @return
	 */
	public List<Field> querySiteByCondition(Field searchField){
		List<SiteInst> SiteInstList = null;  //网元List
		List<Field> subnetList = new ArrayList<Field>();   //子网List
		SiteInstDao siteInstDao  = new SiteInstDao();
		SiteInst siteInst = new SiteInst();		
		try {
			subnetList = subnetDao.querySiteByCondition(searchField, connection);
			for(Field field :subnetList){
				siteInst.setFieldID(field.getId());
				SiteInstList = siteInstDao.queryByCondition(siteInst, connection);
				field.setSiteInstList(SiteInstList);
			}
			
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}finally{
			SiteInstList = null;
			siteInstDao  = null;
			siteInst = null;		

		}
		return subnetList;
	}
	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}

	public void setConnection(Connection connection) {
		super.connection = connection;
	}
	public Field siteParentType(SiteInst siteInst) {
		Field field;
		return field = this.subnetDao.getSiteParent(siteInst , connection);
	}

}
