package com.nms.model.perform;

import java.sql.Connection;

import com.nms.db.dao.perform.CurrentAlamDao;
import com.nms.model.util.ObjectService;
import com.nms.ui.manager.ExceptionManage;

public class CurrentAlamService extends ObjectService{
	public void setConnection(Connection connection) {
		super.connection = connection;
	}

	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}

	private CurrentAlamDao currentAlamDao = new CurrentAlamDao();
  
	/**
	 * @param PortInst portInst 实体
	 * @return  执行成功的记录数
	 * @throws Exception
	 */
	public boolean saveOrUpdate(int siteId,String name,int number) throws Exception {
		if (name == null) {
			throw new Exception("name is null");
		}
		boolean fals=false;
		try {
			fals=currentAlamDao.select(siteId,name,number,connection);
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
		return fals;
	}
   
}
