package com.nms.model.ptn.path;

import java.sql.Connection;
import java.util.List;

import com.nms.db.bean.ptn.path.ServiceInfo;
import com.nms.db.dao.ptn.path.ServiceInfoDao;
import com.nms.model.util.ObjectService;

/**
 * eline\etree\elan\ces业务的基类处理层
 * @author kk
 *
 */
public class ServiceInfoService extends ObjectService{
	
	public void setConnection(Connection connection) {
		super.connection = connection;	
	}

	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}
	ServiceInfoDao serviceInfoDao=new ServiceInfoDao();
	/**
	 * 查询业务类型
	 * @param id 主键
	 * @return 业务类型
	 * @throws Exception 
	 */
	public int selectType(int id) throws Exception{
		return serviceInfoDao.queryType(id, super.connection);
	}
	
	/**
	 * 
	 * 通过 acId 查询
	 * @param id	acId
	 * @return		主键Id
	 * @throws Exception
	 */
	public List<ServiceInfo> selectByAcId(int id) throws Exception{
		return serviceInfoDao.selectByAcId(id, super.connection);
	}
	
	public String selectNameByXcId(int xcid, int siteid) throws Exception{
		return serviceInfoDao.selectNameByXcId(xcid, siteid, super.connection);
	}
}
