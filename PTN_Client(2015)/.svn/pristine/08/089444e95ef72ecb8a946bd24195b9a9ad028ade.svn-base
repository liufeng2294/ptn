package com.nms.model.ptn.clock;

import java.sql.Connection;
import java.util.List;

import com.nms.db.bean.ptn.clock.ClockSource_Corba;
import com.nms.db.dao.ptn.clock.ClockSourceDao_Corba;
import com.nms.model.util.ObjectService;
/**
 * corba保护组（1:1tunnel、msp、lsp）业务层
 * @author dzy
 *
 */
public class ClockSourceService_Corba  extends ObjectService{
	public void setConnection(Connection connection) {
		super.connection = connection;	
	}
	
	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}
	ClockSourceDao_Corba clockSourceDao_Corba = new ClockSourceDao_Corba();
	
	/**
	 * 通过条件查询 保护组
	 * @param clockSource_Corba
	 * @return
	 * @throws Exception
	 */
	public List<ClockSource_Corba> queryByCondition(ClockSource_Corba clockSource_Corba) throws Exception{
		if(null == clockSource_Corba)
		clockSource_Corba = new ClockSource_Corba();
		return clockSourceDao_Corba.queryByCondition(clockSource_Corba,this.connection);
	}
}
