package com.nms.model.ptn;

import java.sql.Connection;
import java.util.List;

import com.nms.db.bean.ptn.RouteBusiness;
import com.nms.db.dao.ptn.RouteBusinessDao;
import com.nms.model.util.ObjectService;
/**
 * 查询路由业务业务层
 * @author dzy
 *
 */
public class RouteBusinessService extends ObjectService{
	
	public void setConnection(Connection connection) {
		super.connection = connection;
	}

	public void setPtnuser(String ptnuser) {
		super.ptnuser = ptnuser;
	}
	
	private RouteBusinessDao routeBusinessDao = new RouteBusinessDao();
	
	/**
	 * 通过网元名称查询路由业务信息
	 * @param siteName 网元名称
	 * @param connection 数据库连接
	 * @return
	 * @throws Exception
	 */
	public List<RouteBusiness> queryBySiteName(String siteName) throws Exception {
		return this.routeBusinessDao.queryBySiteName(siteName, this.connection);
	}
	
	/**
	 * 通过网元名称查询经过路由业务信息
	 * @param siteId 网元id
	 * @param connection 数据库连接
	 * @return
	 * @throws Exception
	 */
	public List<RouteBusiness> queryBySiteName_XC(int siteId) throws Exception {
		return this.routeBusinessDao.queryBySiteName_XC(siteId, this.connection);
	}
}
