	/**
	 * 执行查询语句
	 * 
	 * @param connection
	 *            数据库连接
	 * @param sql
	 *            sql语句
	 * @return 查询集合
	 * @throws Exception
	 */
	private List<MacManagementInfo> excuteQuery(PreparedStatement preparedStatement) throws Exception {
		List<MacManagementInfo> macList = null;
		ResultSet resultSet = null;
		MacManagementInfo mac = null;
		try {
			macList = new ArrayList<MacManagementInfo>();
			resultSet = preparedStatement.executeQuery();

			while (resultSet.next()) {
				mac = new MacManagementInfo();
				mac.setId(resultSet.getInt("id"));
				mac.setSiteId(resultSet.getInt("siteId"));
				mac.setVlanId(resultSet.getInt("vlanId"));
				mac.setMac(resultSet.getString("mac"));
				mac.setPortId(resultSet.getInt("portId"));
				macList.add(mac);
			}
		} catch (Exception e) {
			throw e;
		} finally {
			if (resultSet != null) {
				try {
					resultSet.close();
				} catch (Exception e) {
					throw e;
				}
				resultSet = null;
			}
			mac = null;
		}
		return macList;
	}

